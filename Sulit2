package com.mycompany.sulit2;
import java.util.Scanner;
public class Sulit2 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Masukkan jumlah angka yang ingin dicek: ");
        int jumlahAngka = scanner.nextInt();
        int[] array = new int[jumlahAngka];
        
        
        System.out.println("Masukkan angka-angka dalam array:");
        for (int i = 0; i < jumlahAngka; i++) {
            array[i] = scanner.nextInt();
        }
        for (int i = 0; i < array.length; i++) {
            if (array [i] < 0) {
                System.out.println("Elemen array ke-" + i + " yang bernilai [" + array[i] + "] adalah bilangan negatif");
            }
        }
    }
}
